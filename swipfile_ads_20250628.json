        // --- Hàm để render các mẫu quảng cáo ---
        function renderAds() {
            const container = document.getElementById('ads-container');
            if (!container) return;

            // Xóa nội dung cũ để tránh trùng lặp
            container.innerHTML = '';

            // --- Logic sắp xếp mới ---
            // 1. Xác định thứ tự ưu tiên cho các loại tag
            const typeOrder = [
                "Storytelling", "Storytelling Hiện Đại", "Storytelling Cổ Điển", "Secret",
                "Advertorial", "Direct Mail Cổ Điển",
                "Tư Duy Marketing", "Lập Luận Nguyên Lý Gốc", "Lập Luận 80/20", "Lập Luận Ẩn Dụ", "Lập Luận Dẫn Dắt", "Phân Tích Vấn Đề", "Lập Luận So Sánh",
                "Lập Luận Công Thức Bí Mật"
            ];
            
            // 2. Sắp xếp danh sách quảng cáo
            const sortedAds = adMasterList.sort((a, b) => {
                const typeAIndex = typeOrder.indexOf(a.type);
                const typeBIndex = typeOrder.indexOf(b.type);

                // So sánh dựa trên vị trí trong mảng typeOrder
                if (typeAIndex !== typeBIndex) {
                    return typeAIndex - typeBIndex;
                }

                // Nếu cùng loại, sắp xếp theo độ dài nội dung (ngắn hơn trước)
                const lengthA = a.analysis.length + a.content.length;
                const lengthB = b.analysis.length + b.content.length;
                return lengthA - lengthB;
            });

            // 3. Lặp qua danh sách đã sắp xếp và tạo thẻ HTML
            sortedAds.forEach(ad => {
                const adCard = document.createElement('div');
                adCard.className = 'bg-white rounded-lg shadow-lg overflow-hidden flex flex-col transform hover:-translate-y-1 transition-transform duration-300';
                adCard.id = ad.id;
                
                let tagColorClass = 'bg-blue-100 text-blue-800'; // Mặc định
                const typeColorMap = {
                    'Tư Duy Marketing': 'bg-green-100 text-green-800',
                    'Secret': 'bg-purple-100 text-purple-800',
                    'Advertorial': 'bg-yellow-100 text-yellow-800',
                    'Storytelling Cổ Điển': 'bg-red-100 text-red-800',
                    'Direct Mail Cổ Điển': 'bg-gray-200 text-gray-800',
                    'Storytelling Hiện Đại': 'bg-indigo-100 text-indigo-800',
                    'Lập Luận So Sánh': 'bg-orange-100 text-orange-800',
                    'Phân Tích Vấn Đề': 'bg-teal-100 text-teal-800',
                    'Lập Luận Nguyên Lý Gốc': 'bg-pink-100 text-pink-800',
                    'Lập Luận 80/20': 'bg-cyan-100 text-cyan-800',
                    'Lập Luận Dẫn Dắt': 'bg-lime-100 text-lime-800',
                    'Lập Luận Ẩn Dụ': 'bg-fuchsia-100 text-fuchsia-800',
                    'Lập Luận Công Thức Bí Mật': 'bg-rose-100 text-rose-800',
                };
                if(typeColorMap[ad.type]) {
                    tagColorClass = typeColorMap[ad.type];
                }

                const cardContent = `
                    <div class="p-6 flex-grow flex flex-col">
                        <div class="flex-grow">
                             <div class="mb-4">
                                <span class="inline-block ${tagColorClass} text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full">${ad.type}</span>
                             </div>
                            <h2 class="text-2xl font-bold text-gray-900 mb-2">${ad.title}</h2>
                            
                            <!-- Khối Phân Tích -->
                            <div class="analysis-block">
                                <strong>Phân tích ngắn:</strong>
                                <p class="mt-1">${ad.analysis}</p>
                            </div>

                            <!-- Nội dung quảng cáo gốc -->
                            <div class="ad-content text-gray-700 leading-relaxed text-base">
                                ${ad.content}
                            </div>
                        </div>
                    </div>
                `;
                
                adCard.innerHTML = cardContent;
                container.appendChild(adCard);
            });
        }

        // Chạy hàm render khi trang được tải
        document.addEventListener('DOMContentLoaded', renderAds);
    </script>
</body>
</html>
